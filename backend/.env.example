# CoffeeMeet Backend Environment Configuration
# Copy this file to .env and update the values for your environment

# Django Configuration
SECRET_KEY=your-secret-key-here-change-in-production-use-50-chars-minimum
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# SQLite (default for development)
DATABASE_URL=sqlite:///db.sqlite3

# PostgreSQL (for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/coffeemeet_db

# Email Configuration
# Console backend for development (emails printed to console)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP backend for production
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=your-email@gmail.com

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Cache Configuration (optional)
# Redis for production caching
# REDIS_URL=redis://localhost:6379/0

# Security Settings (for production)
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# Logging Level
LOG_LEVEL=INFO

# File Upload Settings
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
